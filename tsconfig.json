{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "types": [
      "vite/client",
      "vite-plugin-vue-component-preview/client"
    ]
  },
  "vueCompilerOptions": {
    "experimentalAdditionalLanguageModules": ["./auto-global-components.js"],
    "plugins": ["vite-plugin-vue-component-preview/tooling"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
